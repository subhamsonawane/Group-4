<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<!-- step 1: persistence unit : name (unique name) -->
	<persistence-unit name="JPA-PU"
		transaction-type="RESOURCE_LOCAL">
		<!-- step 2: provider (HibernateProvider) -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!-- step 3: Connection Properties : (url,user,password,driver) -->
		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:oracle:thin:@localhost:1521/orcl" />
			<property name="javax.persistence.jdbc.user" value="SCOTT" />
			<property name="javax.persistence.jdbc.password"
				value="tiger" />
			<property name="javax.persistence.jdbc.driver"
				value="oracle.jdbc.driver.OracleDriver" />
			<property name="hibernate.show_sql" value="true" /> <!-- Will show SQL quey in -->
			<property name="hibernate.hbm2ddl.auto" value="update" />

		</properties>
	</persistence-unit>
</persistence>